
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="400dp"
    android:layout_gravity="center" >

    <android.support.v7.widget.CardView
        android:id="@+id/cv_robot_voice_control"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_fra_voice_control_icon"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="50dp"
                android:src="@drawable/ic_robot_voice_control"
                android:background="#ffee58"/>

            <TextView
                android:id="@+id/tv_fra_voice_control_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音控制"
                android:textStyle="bold"
                android:textColor="@color/colorRobotTitle"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/iv_fra_voice_control_icon"/>

            <TextView
                android:id="@+id/tv_fra_voice_control_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="21dp"
                android:layout_marginStart="21dp"
                android:gravity="center"
                android:text="通过语音方便的控制机器人的移动"
                android:textColor="#8a8a8a"
                android:textSize="14sp"
                android:layout_below="@+id/tv_fra_voice_control_title"/>




            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_fra_voice_control_enter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:backgroundTint="#ffee58"
                android:src="@drawable/ic_robot_enter"
                android:layout_marginBottom="40dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>