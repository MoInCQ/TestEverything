
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="400dp"
    android:layout_gravity="center" >

    <android.support.v7.widget.CardView
        android:id="@+id/cv_robot_chat"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_fra_chat_icon"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="50dp"
                android:src="@drawable/ic_robot_chat"
                android:background="#FE718D"/>

            <TextView
                android:id="@+id/tv_fra_chat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音视频通话"
                android:textStyle="bold"
                android:textColor="@color/colorRobotTitle"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/iv_fra_chat_icon"/>

            <TextView
                android:id="@+id/tv_fra_chat_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="21dp"
                android:layout_marginStart="21dp"
                android:gravity="center"
                android:text="帮助您随时与您的病人进行面对面沟通"
                android:textColor="#8a8a8a"
                android:textSize="14sp"
                android:layout_below="@+id/tv_fra_chat_title"/>


            <EditText
                android:id="@+id/et_fra_chat_search_channel"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint="在此输入频道号"
                android:cursorVisible="false"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_search"
                android:layout_below="@+id/tv_fra_chat_synopsis"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_fra_chat_enter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:backgroundTint="#FE718D"
                android:src="@drawable/ic_robot_enter"
                android:layout_marginBottom="40dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        
    </android.support.v7.widget.CardView>

</RelativeLayout>