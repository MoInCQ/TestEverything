<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="DragDotView">
        <attr name="ddvText" format="string" />
        <attr name="ddvBackground" format="color"/>
        <attr name="ddvTextSize" format="dimension"/>
        <attr name="ddvTextColor" format="color"/>
        <attr name="ddvCornerSize" format="integer"/>
        <attr name="ddvStockWidth" format="dimension" />
        <attr name="ddvStockColor" format="color" />
        <attr name="ddvVerticalTotalPadding" format="dimension" />
        <attr name="ddvHorizontalTotalPadding" format="dimension" />
    </declare-styleable>
</resources>
